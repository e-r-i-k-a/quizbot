//to watch and compile, run: 'stylus -w public/stylus/index.styl -o public/stylesheet.css'
@import 'public/stylus/variables'

body
  min-height 100%
  margin auto
main
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  background radial-gradient(ellipse at center, gray 0%, gray 60%, rgba(0,0,0,.2) 100%)
button
  padding 0.3em
  margin .5em 1.5em 0 1.5em
  border 1px solid purple
  border-radius 0.3em
  font-size 1em
  color darkPurple
  text-align center
  font-weight 1000
button:active
  color white
  background-color: purple
p
  color darkPurple
  font-size 18px
  font-weight bold
  font-family 'Indie Flower'
#start, #end, #question
  display flex
  flex-direction column
  align-items center
  justify-content center

//start page
.start-letter
  color purple
  z-index 0
  font-size 2em
  letter-spacing .05em
  font-weight 1000
  animation start 1s both
  animation-delay calc(var(--delay) * .1s)
  display inline-block
  font-family 'Bungee Shade'
#start-text
  margin 10% 10% 5% 10%

//end page
.end-letter
  color purple
  z-index 0
  font-size 1.5em
  letter-spacing .05em
  font-weight 1000
  text-shadow: -1px 0 green, 0 1px green, 1px 0 green, 0 -1px green;
  animation end 1s both
  animation-delay calc(var(--delay) * .01s)
  display inline-block
  font-family 'Bungee Shade'
#end-text
  position absolute
  display flex
  flex-direction column
  align-items center

//header and footer
header, footer
  position absolute
  width 100%
  z-index 1
  display flex
header
  top 0
  justify-content center
  padding 5%
  color purple
  z-index 0
  font-size 1em
  opacity 0
  text-shadow 1px 1px green, 2px 2px green
  animation header 1s both
  font-family 'Bungee Shade'
footer
  bottom 0
  font-family 'Indie Flower'
small
  font-size 1em
  width 50%
  padding 5%
#footer-text1
  text-align left
#footer-text2
  text-align right

@media notPhone
  button:hover
    transition  all 0.2s
    color white
    background-color: purple
