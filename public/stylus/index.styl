//to watch and compile, run: 'stylus -w public/stylus/index.styl -o public/stylesheet.css'
gray = #fafafa
purple = rgb(151, 56, 245)
notPhone = 'only screen and (min-width: 480px)'

body
  min-height 100%
  margin auto
main
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  background radial-gradient(ellipse at center, gray 0%, gray 60%, rgba(0,0,0,.2) 100%)
button
  padding 0.3em
  border 1px solid purple
  border-radius 0.3em
  font-weight 550
  font-size 1em
  color black
  text-align center
button:active
  color white
  background-color: purple

#start, #end, #question
  display flex
  flex-direction column
  align-items center

//landing page
.start-letter
  color purple
  z-index 0
  font-size 2em
  letter-spacing .05em
  text-transform uppercase
  font-weight 1000
  animation bounce-in-top 1s both
  animation-delay calc(var(--delay) * .1s)
  display inline-block

//header and footer
header, footer
  position absolute
  width 100%
  z-index 1
  display flex
header
  top 0
  justify-content center
  padding 5%
  color purple
  z-index 0
  font-size 1em
  opacity 0
  text-transform uppercase
  font-weight 600
  text-shadow 1px 1px red, 1px 1px red
  animation header 1s both
footer
  bottom 0
small
  font-size 1em
  width 50%
  padding 5%
#footer-text1
  text-align left
#footer-text2
  text-align right

@keyframes bounce-in-top {
  0% {
    transform translateY(-50px)
    animation-timing-function ease-in
    opacity 0
  }
  38% {
    transform translateY(0)
    animation-timing-function ease-out
  }
  55% {
    transform translateY(-10px)
    animation-timing-function ease-in
  }
  72% {
    transform translateY(0)
    animation-timing-function ease-out
    opacity 1
  }
  81% {
    transform translateY(-5px)
    animation-timing-function ease-in
  }
  90% {
    transform translateY(0)
    animation-timing-function ease-out
  }
  95% {
    transform translateY(-1px)
    animation-timing-function ease-in
  }
  100% {
    transform translateY(0)
    animation-timing-function ease-out
    text-shadow 1px 1px red, 2px 2px red
  }
}

@keyframes header {
  to {
    opacity 1
  }
}

@media notPhone
  button:hover
    transition  all 0.2s
    color white
    background-color: purple
