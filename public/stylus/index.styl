body
  min-height 100%
  margin auto
main
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  flex-direction column
  justify-content center
  align-items center
header
  top 0
footer
  width 100%
  position absolute
  bottom 0
  z-index 1
  display flex
  flex-flow row-wrap
small
  color rgba(0,0,0,0.1)
  color red
  font-size 1em
  width 50%
  padding 3%
#footer-text1
  text-align left
#footer-text2
  text-align right
#start, #end, #question
  display flex
  flex-direction column
  align-items center
